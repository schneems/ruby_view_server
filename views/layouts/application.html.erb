<%
  def link_to(name, url)
    "<a href='#{url}'>#{name}</a>"
  end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to("Me", "me.html") %> | <%= link_to("Blog", "herminio.html") %>

    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>
